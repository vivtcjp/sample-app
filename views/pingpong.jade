doctype html
html
  head
    title Ping Pong Game
    link(rel='stylesheet', href='/stylesheets/pingpong.css')
  body
    h1 Ping Pong Game
    h2 Welcome to the Ultimate Ping Pong Challenge!
    div#startScreen
      h3 Instructions
      p Use the arrow keys to move your paddle up and down.
      p First to 10 points wins the game.
      button#startButton Start Game
    canvas#gameCanvas(width='800', height='400', style='display:none')
    div#gameControls(style='display:none')
      label(for='bgColor') Choose Background Color:
      input(type='color', id='bgColor', name='bgColor')
      label(for='playerColor') Choose Player Paddle Color:
      input(type='color', id='playerColor', name='playerColor')
      label(for='aiColor') Choose AI Paddle Color:
      input(type='color', id='aiColor', name='aiColor')
      label(for='ballColor') Choose Ball Color:
      input(type='color', id='ballColor', name='ballColor')
      label(for='difficulty') Choose Difficulty:
      select(id='difficulty', name='difficulty')
        option(value='easy') Easy
        option(value='normal', selected) Normal
        option(value='hard') Hard
    script(src='/javascripts/pingpong.js')